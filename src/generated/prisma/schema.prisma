generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime
  createdAt   DateTime @default(now())
}

model Task {
  id        String    @id @default(cuid())
  title     String
  status    String    @default("Pending")
  dueDate   DateTime?
  createdAt DateTime  @default(now())
}
