generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(cuid())
  image       String?
  title       String
  description String?
  date        DateTime
  createdAt   DateTime @default(now())
}

model Task {
  id        String   @id @default(cuid())
  title     String
  leading   String?
  speaking  String?
  status    String   @default("Pending")
  dueDate   DateTime?
  createdAt DateTime @default(now())
}

model User {
  id            String   @id @default(cuid())
  fullName      String?
  email         String   @unique
  password      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}